ldap {
        server = "ldap01.kazutan.com"
        basedn = "ou=People,dc=example,dc=com"
        #filter = "(uid=\%\{\%\{Stripped-User-Name}:-\%\{User-Name}})"
        ldap_connections_number = 5
        max_uses = 0
        timeout = 4
        timelimit = 3
        net_timeout = 1

        tls {
                start_tls = no
        }

        dictionary_mapping = ${confdir}/ldap.attrmap
        edir_account_policy_check = no

        keepalive {
                idle = 60
                probes = 3
                interval = 3
        }
}
